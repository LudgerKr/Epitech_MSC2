<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.GalleryFragment">

    <ListView
        android:id="@+id/list_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rename_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <EditText
            android:id="@+id/edit_rename"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:background="@drawable/border"/>

        <Button
            android:id="@+id/btn_rename"
            android:layout_width="125sp"
            android:layout_height="50sp"
            android:layout_below="@+id/edit_rename"
            android:layout_marginTop="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75sp"
            android:text="@string/rename"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="125sp"
            android:layout_height="50sp"
            android:layout_below="@+id/edit_rename"
            android:layout_marginTop="20sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="75sp"
            android:text="@string/cancel"
            android:background="@color/white"/>
    </RelativeLayout>


</RelativeLayout>